<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f2f2f4">

    <include layout="@layout/layout_action_bar_title"></include>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:singleLine="true"
        android:hint="标题"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="10dp"
        android:maxLength="30"
        android:id="@+id/title"/>
    <include layout="@layout/layout_dividingline_horizontal"></include>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/white"
        android:maxLength="150"
        android:ellipsize="end"
        android:hint="尽可能清晰、详尽的将你的问题描述出来..."
        android:padding="@dimen/marginAndpadding12"
        android:gravity="top"
        android:id="@+id/content"/>
    <include layout="@layout/layout_dividingline_horizontal"></include>

    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/marginAndpadding12"
        android:paddingTop="15dp"
        android:background="@color/white"
        android:text="最多可添加3张图"
        android:textSize="15sp"
        android:textColor="@color/text_medium"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="20dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/select_image_1"
            >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/select_image1"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_gravity="right"
                android:id="@+id/img_delete_1"
                android:src="@mipmap/btn_shanchu"/>

        </FrameLayout>


        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/select_image_2"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/select_image2"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_gravity="right"
                android:id="@+id/img_delete_2"
                android:src="@mipmap/btn_shanchu"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/select_image_3"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/select_image3"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_gravity="right"
                android:id="@+id/img_delete_3"
                android:src="@mipmap/btn_shanchu"/>

        </FrameLayout>


        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/img_add"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:src="@mipmap/btn_kanzhe_jhpic"/>


    </LinearLayout>


</LinearLayout>