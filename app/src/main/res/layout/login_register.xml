<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/layout_action_bar_title"></include>

    <ImageButton
        android:id="@+id/btn_face"
        android:layout_width="90dp"
        android:layout_height="94dp"
        android:scaleType="fitXY"
        android:padding="0dp"
        android:background="@color/page_background"
        android:src="@mipmap/btn_xt_txpic"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"/>

        <RadioGroup
            android:id="@+id/layout_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="19dp">

            <RadioButton
                android:id="@+id/btn_boy"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="帅哥"
                android:textColor="@drawable/color_radiobtn"
                android:gravity="center"
                android:layout_gravity="center"
                android:button="@null"
                android:background="@drawable/title_tab_bg"
                android:drawableLeft="@drawable/radiobtn_group_selector_nan"
                android:layout_marginRight="22dp"
                android:paddingLeft="15dp"/>

            <RadioButton
                android:id="@+id/btn_girl"
                android:layout_weight="1"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:text="美女"
                android:textSize="15sp"
                android:textColor="@drawable/color_radiobtn"
                android:drawableLeft="@drawable/radiobtn_group_selector_nv"
                android:layout_marginLeft="22dp"
                android:paddingLeft="15dp"
                android:button="@null"
                android:gravity="center"
                android:checked="true"
                android:background="@drawable/title_tab_bg" />

        </RadioGroup>


    <RelativeLayout
        android:id="@+id/layout_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/ic_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="12dp"
            android:hint="昵称"
            android:textSize="15sp"
            android:textColor="@color/text_medium"
            android:background="@color/transparent" />

    </RelativeLayout>



