<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_toolbar_tab"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:background="?attr/colorPrimary"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="38dp"
            android:layout_weight="1">

            <RadioGroup
                android:id="@+id/toolbar_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/toolbar_tab0"
                    style="@style/ToolBarTabStyle"
                    android:checked="true"
                    android:text="广场" />

                <RadioButton
                    android:id="@+id/toolbar_tab1"
                    style="@style/ToolBarTabStyle"
                    android:checked="false"
                    android:text="社区" />
            </RadioGroup>
            <RadioGroup
                android:id="@+id/toolbar_line_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/toolbar_tabline0"
                    style="@style/ToolBarTabLineStyle"
                    android:checked="true"
                    />
                <RadioButton
                    android:id="@+id/toolbar_tabline1"
                    style="@style/ToolBarTabLineStyle"
                    android:checked="false"
                     />
            </RadioGroup>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/toolbar_rightlayout"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/rightbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/marginAndpadding12"
                android:background="@mipmap/ic_kanzhe_fabu2"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.Toolbar>
