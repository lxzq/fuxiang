<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/app_name"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:id="@+id/title"
        android:textColor="@color/text_dark"
        android:maxLines="2"
        android:textSize="17sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/marginAndpadding12"
        android:paddingRight="@dimen/marginAndpadding12"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/defalut_user_face"
            android:id="@+id/face"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/nickname"
            android:textColor="@color/text_dark"
            android:text="星星妈妈"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:id="@+id/date"
            android:textColor="@color/text_medium"
            android:text="2015-09-11 12:30"/>

    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/marginAndpadding12"
            android:paddingRight="@dimen/marginAndpadding12"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="禁原因何在"
                android:id="@+id/content"
                android:textColor="@color/text_medium"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="15dp"
                android:id="@+id/image_1"
                android:visibility="gone"
                android:src="@mipmap/scan_mask"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="5dp"
                android:id="@+id/image_2"
                android:visibility="gone"
                android:src="@mipmap/scan_mask"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="5dp"
                android:id="@+id/image_3"
                android:visibility="gone"
                android:src="@mipmap/scan_mask"/>

            <include android:id="@+id/menu"
                     layout="@layout/bang_detail_menu"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="35dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment_num_text"
                    android:text="全部评论173条"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_medium"/>

                <include layout="@layout/layout_dividingline_horizontal"></include>

            </LinearLayout>
        </LinearLayout>

</LinearLayout>