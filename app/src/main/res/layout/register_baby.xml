<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/layout_action_bar_title"></include>

    <ImageButton
        android:id="@+id/btn_face"
        android:layout_width="90dp"
        android:layout_height="94dp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:background="@color/page_background"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/btn_baobaopic" />

    <RadioGroup
        android:id="@+id/layout_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="19dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn_boy"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="22dp"
            android:layout_weight="1"
            android:background="@drawable/title_tab_bg"
            android:button="@null"
            android:drawableLeft="@drawable/radiobtn_group_selector_nan"
            android:drawablePadding="-2dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="王子"
            android:textColor="@drawable/color_radiobtn" />

        <RadioButton
            android:id="@+id/btn_girl"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="22dp"
            android:layout_weight="1"
            android:background="@drawable/title_tab_bg"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/radiobtn_group_selector_nv"
            android:drawablePadding="-2dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="公主"
            android:textColor="@drawable/color_radiobtn"
            android:textSize="15sp" />

    </RadioGroup>


    <RelativeLayout
        android:id="@+id/layout_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/ic_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/transparent"
            android:hint="姓名"
            android:maxLength="10"
            android:paddingLeft="12dp"
            android:textColor="@color/text_medium"
            android:textSize="15sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/ic_date"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="出生日期"
            android:paddingLeft="12dp"
            android:textColor="@color/text_medium"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_jiyu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/ic_jiyu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/transparent"
            android:hint="宝贝寄语"
            android:maxLength="10"
            android:paddingLeft="12dp"
            android:textColor="@color/text_medium"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/ic_agree"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/btn_select"
        android:gravity="center_vertical"
        android:text="选择和孩子关系"
        android:textColor="@color/primary_text_disabled_material_light"
        android:textSize="12sp" />

    <RadioGroup
        android:id="@+id/ic_familymanager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/marginAndpadding12"
        android:paddingRight="@dimen/marginAndpadding12">

        <RadioButton
            android:id="@+id/baba"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/look_tags_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="爸爸"
            android:textColor="@drawable/look_tags_text_color" />


        <RadioButton
            android:id="@+id/mama"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/look_tags_bg"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="妈妈"
            android:textColor="@drawable/look_tags_text_color" />

        <RadioButton
            android:id="@+id/yeye"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/look_tags_bg"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="爷爷"
            android:textColor="@drawable/look_tags_text_color" />

        <RadioButton
            android:id="@+id/nainai"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/look_tags_bg"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="奶奶"
            android:textColor="@drawable/look_tags_text_color" />

        <RadioButton
            android:id="@+id/waigong"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/look_tags_bg"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="外公"
            android:textColor="@drawable/look_tags_text_color" />

        <RadioButton
            android:id="@+id/waipo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/look_tags_bg"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="外婆"
            android:textColor="@drawable/look_tags_text_color" />
    </RadioGroup>


</LinearLayout>
