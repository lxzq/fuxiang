<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_action_bar_title"></include>

    <LinearLayout
        android:id="@+id/layout_home"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="1px"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_face"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:src="@mipmap/bg_wojia_bb"/>

        <LinearLayout
            android:layout_toRightOf="@id/iv_face"
            android:layout_marginLeft="12dp"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/ic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/text_dark"
                android:text="彩虹豆"
                />

            <TextView
                android:id="@+id/ic_sex_0"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/text_dark"
                android:textSize="15sp"
                android:text="美女"
                android:drawablePadding="10dp"
                android:visibility="gone"
                android:drawableLeft="@mipmap/ic_wojia_nv"/>

            <TextView
                android:id="@+id/ic_sex_1"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/text_dark"
                android:textSize="15sp"
                android:text="帅哥"
                android:visibility="gone"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/ic_wojia_nan"/>

        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/iv_code"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/ic_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫一扫二维码，加我好友或者家人"
        android:textColor="@color/text_dark"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="30dp"/>


</LinearLayout>
