<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_background">

    <include layout="@layout/layout_action_bar_title"></include>

    <ScrollView
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

       
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/marginAndpadding12"
                android:paddingRight="@dimen/marginAndpadding12"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_face"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/btn_wojia_nan60dp02"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ic_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/text_dark"
                        android:text="彩虹豆"
                         />

                    <TextView
                        android:id="@+id/ic_sex_1"
                        android:layout_marginTop="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_dark"
                        android:textSize="15sp"
                        android:visibility="gone"
                        android:text="男"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@mipmap/ic_wojia_nan"/>

                    <TextView
                        android:id="@+id/ic_sex_0"
                        android:layout_marginTop="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_dark"
                        android:textSize="15sp"
                        android:text="女"
                        android:visibility="gone"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@mipmap/ic_wojia_nv"/>

                </LinearLayout>



                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:id="@+id/ewm"
                    android:src="@mipmap/ic_wojia_ewm"/>

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/title_btn"
                    android:textSize="15sp"
                    android:textColor="@color/text_dark"
                    android:text="编辑"
                    />
            </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_bangbi"
        android:onClick="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/choose_status_bg">

        <TextView
            android:id="@+id/ic_bangbi"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:textColor="@color/text_dark"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="我的帮币"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_wojia_bangbi"/>

        <TextView
            android:id="@+id/ic_bangbbicount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="360"
            android:textSize="13sp"
            android:gravity="center"
            android:textColor="@color/text_medium"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"/>

    </LinearLayout>
            <include layout="@layout/layout_dividingline_horizontal"></include>
    <LinearLayout
        android:id="@+id/layout_bangbbang"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/choose_status_bg">
        
        <TextView
            android:id="@+id/ic_bangbang"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="我的帮帮"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_wojia_bangbang"/>

        <TextView
            android:id="@+id/ic_bangbbangcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="13sp"
            android:textColor="@color/text_medium"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"/>

    </LinearLayout>
            <include layout="@layout/layout_dividingline_horizontal"></include>
    <LinearLayout
        android:id="@+id/layout_huodong"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/choose_status_bg">

        <TextView
            android:id="@+id/ic_huodong"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="我的晒晒"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_wojia_shaishai"/>

        <TextView
            android:id="@+id/ic_shaishaicount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="13sp"
            android:textColor="@color/text_medium"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"/>

    </LinearLayout>
     <include layout="@layout/layout_dividingline_horizontal"></include>
    <LinearLayout
        android:id="@+id/layout_save"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/choose_status_bg">

        <TextView
            android:id="@+id/ic_save"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="我的收藏"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_wojia_shoucang"/>

        <TextView
            android:id="@+id/ic_savecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="13sp"
            android:textColor="@color/text_medium"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"/>

    </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/f2f2f4"/>

    <LinearLayout
        android:id="@+id/layout_familymanager"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/choose_status_bg">

        <TextView
            android:id="@+id/ic_familymanager"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="家人管理"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_wojia_jiaren"/>

        <ImageButton
            android:id="@+id/btn_familymanager"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/btn_jiantou"
            android:layout_marginRight="13dp"/>

    </LinearLayout>

    <include layout="@layout/layout_dividingline_horizontal"></include>
    <LinearLayout
        android:id="@+id/layout_partenermanager"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/choose_status_bg">

        <TextView
            android:id="@+id/ic_partenermanager"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="伙伴管理"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_wojia_huoban"/>

        <ImageButton
            android:id="@+id/btn_partenermanager"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/btn_jiantou"
            android:layout_marginRight="13dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_set"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/choose_status_bg">

        <TextView
            android:id="@+id/ic_set"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="设置"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_wojia_shezhi"/>

        <ImageButton
            android:id="@+id/btn_set"
            android:layout_width="8dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/btn_jiantou"
            android:layout_marginRight="13dp"/>

      </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
