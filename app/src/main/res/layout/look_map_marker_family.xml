<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/look_marker_family"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/bg_kanzhe_tx"/>
    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/face"
        android:layout_gravity="center"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/ic_kz_addpicwo"/>

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/pro_num"
            android:textColor="@color/white"
            android:text="10+"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:layout_gravity="center|top"
            android:background="@drawable/look_button_tip"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:text="张星星生日快乐"
             android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:maxLines="5"
            android:ellipsize="end"
            android:id="@id/message"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/marginAndpadding12"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="12sp"
            android:textColor="@color/text_dark"
            android:background="@drawable/bg_kanzhe_lt"/>
    </FrameLayout>

</LinearLayout>