<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="106dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"

        android:background="@drawable/login_button_bg">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_gravity="center|bottom"
            android:text="微信登录"
            android:drawablePadding="19dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:id="@+id/weixinLogin"
            android:drawableLeft="@mipmap/ic_login_weixin"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"

        android:background="@drawable/login_button_bg">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_gravity="center|bottom"
            android:text="QQ登录"
            android:drawablePadding="19dp"
            android:textColor="@color/white"
            android:id="@+id/qqLogin"
            android:textSize="17sp"
            android:drawableLeft="@mipmap/ic_login_qq"
            />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginTop="10dp"
        android:text="手机号登录"
        android:drawablePadding="15dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_gravity="center"
        android:id="@+id/btn_login"

        />

  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        >

   <FrameLayout
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:alpha="0.3"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="手机号注册"
        android:drawablePadding="15dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:paddingLeft="@dimen/marginAndpadding12"
        android:paddingRight="@dimen/marginAndpadding12"
        android:id="@+id/btn_register"
        android:drawableLeft="@mipmap/ic_shouji"
      />
      </FrameLayout>
  </LinearLayout>
</LinearLayout>