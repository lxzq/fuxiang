<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="14dp"
        android:paddingLeft="@dimen/marginAndpadding12"
        android:paddingRight="@dimen/marginAndpadding12"
        android:paddingTop="22dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/gtitem_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:drawableLeft="@mipmap/ic_kanzhe_czstb"
                android:drawablePadding="5dp"
                android:text="妈妈"
                android:gravity="center_vertical"
                android:textColor="@color/text_medium"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/gtitem_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8月16日 12:00"
                android:textColor="@color/text_light"
                android:textSize="12sp" />
            <!--
                        <TextView
                            android:id="@+id/gtitem_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="12:00"
                            android:textColor="@color/text_light"
                            android:textSize="12sp" />-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical">

                <TextView
                    android:id="@+id/gtitem_childage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_add"
                    android:drawablePadding="5dp"
                    android:text="253天"
                    android:textColor="@color/text_medium"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/gtitem_piclayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/layout_content_all" />

            <TextView
                android:id="@+id/images_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@mipmap/bg_kanzhe_right"
                android:gravity="right"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:text="3"
                android:textColor="@color/text_dark"
                android:textSize="17sp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="14dp"
            android:maxLines="2"
            android:paddingTop="20dp"
            android:text="熊孩子已经玩疯了，快到吉米童话王国儿童主题乐园来fgd dfsfs"
            android:textColor="@color/text_dark"
            android:textSize="15sp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/gtitem_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:drawableLeft="@mipmap/ic_add"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="汇林阁小区"
                android:textColor="@color/text_light"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/first_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_kanzhe_czsbq" />

            <TextView
                android:id="@+id/gtitem_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/shape_graypoint_light"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/shape_graypoint_light"
                android:text="第一次爬"
                android:textColor="@color/text_light"
                android:layout_marginRight="10dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/gtitem_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shape_graypoint_light"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/shape_graypoint_light"
                android:text="开心"
                android:textColor="@color/text_light"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/layout_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/gtitem_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/btn_delete" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical">

                <ImageView
                    android:id="@+id/gtitem_morebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/btn_zdan" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="-12dp"
            android:layout_marginRight="-12dp"
            android:orientation="vertical"
            android:visibility="gone">

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_dividingline_horizontal" />
</LinearLayout>

