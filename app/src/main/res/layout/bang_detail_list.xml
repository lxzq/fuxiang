<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_action_bar_title"></include>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.qcsh.fuxiang.widget.OrderView
            android:id="@+id/refreshview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/layout_listview"></include>
        </com.qcsh.fuxiang.widget.OrderView>


        <LinearLayout
            android:id="@+id/menu_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="gone">

            <include layout="@layout/bang_detail_menu"></include>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>