<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_action_bar_title"></include>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



    <ImageView
        android:id="@+id/layout_baby"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_wojia_bb"/>

        <ImageView
            android:id="@+id/iv_baby"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@color/green"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:layout_marginTop="-55dp"/>


    <TextView
        android:id="@+id/ic_bless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_dark"
        android:textSize="15sp"
        android:text="开开心心、快快乐乐每一天！"
        android:gravity="right"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/iv_name"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:textColor="@color/text_dark"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="姓名"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_wojia_name"/>

        <TextView
            android:id="@+id/iv_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张星星"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/text_light"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"/>
    </LinearLayout>

    <include layout="@layout/layout_dividingline_horizontal"></include>

        <LinearLayout
            android:id="@+id/layout_birthday"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/iv_birthday"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:textColor="@color/text_dark"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="出生日期"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/ic_wojia_rili"/>

            <TextView
                android:id="@+id/iv_birthday2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014年1月20日"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/text_light"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="13dp"/>

        </LinearLayout>


    <include layout="@layout/layout_dividingline_horizontal"></include>


        <LinearLayout
            android:id="@+id/layout_sex"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/iv_sex"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:textColor="@color/text_dark"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="性别"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/ic_wojia_xb"/>

            <Spinner
                android:id="@+id/iv_sex2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="15sp"
                android:textColor="@color/text_light"
                android:layout_gravity="center"
                android:background="#ffffffff"
                android:spinnerMode="dialog"
                android:drawSelectorOnTop="false"
                android:layout_marginRight="12dp" />

        </LinearLayout>

    <include layout="@layout/layout_dividingline_horizontal"></include>

    <LinearLayout
        android:id="@+id/layout_code"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/iv_code"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:textColor="@color/text_dark"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="二维码"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_wojia_ewm"/>

    </LinearLayout>

    <include layout="@layout/layout_dividingline_horizontal"></include>

    <LinearLayout
        android:id="@+id/layout_jiyu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/iv_jiyu"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:textColor="@color/text_dark"
            android:layout_weight="1"
            android:textSize="15sp"
            android:text="宝贝寄语"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_wojia_bbjy"/>

        <TextView
            android:id="@+id/iv_jiyu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快快乐乐，开开心心每一天!"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/text_light"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"/>
    </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
